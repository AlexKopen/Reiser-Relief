{{ include('common/header.twig') }}

<div id="home" class="page-content">
    <section id="slide-show">
        <div class="container">
            <div class="padding-hold">
                <div id="slide-show-container">
                    <ul>
                        {% for Image in SlideShowImages %}
                            {% if loop.index0 == 0 %}
                                <li>
                            <a href="{{ Image['Link'] }}">
                                <img src="{{ RootURL }}resources/images/home/slide-show/{{ Image['Url'] }}"
                                     alt="{{ Image['Alt'] }}">
                            {% else %}
                                <li class="hidden-slide">
                                <a href="{{ Image['Link'] }}">
                                <span class="hidden-image-url">{{ RootURL }}resources/images/home/slide-show/{{ Image['Url'] }}</span>
                                <img src="" alt="{{ Image['Alt'] }}">
                            {% endif %}
                            <div class="slide-description">
                                <h1>{{ Image['Header'] }}</h1>
                                <p>{{ Image['Description'] }}</p>
                            </div>
                            </a>
                            </li>

                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <nav class="unslider-nav">
            <ol>
                {% for Image in SlideShowImages %}
                    {% if loop.index0 == 0 %}
                        <li data-slide="0" class="unslider-active">1</li>
                    {% else %}
                        <li data-slide="{{ loop.index0 }}">{{ loop.index0 + 1 }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
        </nav>
    </section>
    <section id="three-block-information">
        <div class="pure-g container">
            <div class="padding-hold">
                <div class="pure-u-1-1 pure-u-md-1-3">
                    <div class="info-content" id="first-info-content">
                        <div class="text-block">
                            <p>
                                <span class="beginning">Mission</span> We partner with impactful organizations to
                                empower
                                and engage the people of Haiti in Christâ€™s name.
                            </p>
                        </div>
                        <div class="link-block">
                            <a href="{{ RootURL }}about">
                                <p>
                                    LEARN MORE
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="pure-u-1-1 pure-u-md-1-3">
                    <div class="info-content">
                        <div class="text-block">
                            <p>
                                <span class="beginning">Make a Difference</span> Check out our volunteer opportunities
                                or
                                apply for a mission trip to Haiti.
                            </p>
                        </div>
                        <div class="link-block">
                            <a href="{{ RootURL }}experience">
                                <p>
                                    EXPERIENCE NOW
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="pure-u-1-1 pure-u-md-1-3">
                    <div class="info-content" id="last-info-content">
                        <div class="text-block">
                            <p>
                                <span class="beginning">Support Us</span> Reiser Relief is entirely based off of
                                donations.
                                100% of our proceedings go to the people that need it most.
                            </p>
                        </div>
                        <div class="link-block">
                            <a href="{{ RootURL }}give">
                                <p>
                                    GIVE
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="our-work">
        <div class="container">
            <h1>
                Our Work
            </h1>
            <div class="pure-g work-row">
                <div class="pure-u-1-2 pure-u-md-1-5 pure-u-sm-1-3">
                    <a href="{{ RootURL }}about/our-work#water">
                        <div class="work-column">
                            <img src="{{ RootURL }}resources/images/home/work-tiles/water.png" alt="Water">
                            <h2>
                                Water
                            </h2>
                        </div>
                    </a>
                </div>
                <div class="pure-u-1-2 pure-u-md-1-5 pure-u-sm-1-3">
                    <a href="{{ RootURL }}about/our-work#education">
                        <div class="work-column">
                            <img src="{{ RootURL }}resources/images/home/work-tiles/education.png" alt="Education">
                            <h2>
                                Education
                            </h2>
                        </div>
                    </a>
                </div>
                <div class="pure-u-1-2 pure-u-md-1-5 pure-u-sm-1-3 sm-not-first-row">
                    <a href="{{ RootURL }}about/our-work#care">
                        <div class="work-column">
                            <img src="{{ RootURL }}resources/images/home/work-tiles/care.png" alt="Care">
                            <h2>
                                Elder, Orphan and Disabled Care
                            </h2>
                        </div>
                    </a>
                </div>
                <div class="pure-u-1-2 pure-u-md-1-5 pure-u-sm-1-3 md-second-row sm-not-first-row"
                     id="fourth-work-tile">
                    <a href="{{ RootURL }}about/our-work#employment">
                        <div class="work-column">
                            <img src="{{ RootURL }}resources/images/home/work-tiles/employment.png" alt="Employment">
                            <h2>
                                Employment
                            </h2>
                        </div>
                    </a>
                </div>
                <div class="pure-u-1-2 pure-u-md-1-5 pure-u-sm-1-3 md-second-row sm-not-first-row" id="last-work-tile">
                    <a href="{{ RootURL }}about/our-work#agriculture">
                        <div class="work-column">
                            <img src="{{ RootURL }}resources/images/home/work-tiles/agriculture.png" alt="Agriculture">
                            <h2>
                                Agriculture
                            </h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="news">
        <div class="container">
            <div class="padding-hold">
                <div class="pure-g">
                    <div class="pure-u-1-1">
                        <h1>
                            News
                        </h1>
                        {% for CurrentNewsPost in News %}
                            <div class="news-post">
                                <h2>
                                    {{ CurrentNewsPost['Title'] }}
                                </h2>
                                <h3>
                                    {{ CurrentNewsPost['Date'] }}
                                </h3>
                                <p>
                                    {{ CurrentNewsPost['Content'] }}
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

